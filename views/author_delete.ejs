<%- include('layout',title) %>

<main>
  <h1><%= title+' : '+author.name%></h1>
  <p><%= author.lifespan %></p>
  <% if(author_books.length){%>
  <p>Delete the following books before attempting to delete this author.</p>
  <h4>Books</h4>
  <dl>
    <% for(const book of author_books){%>
    <dt>
      <a href="<%=book.url%>"> <%=book.title%> </a>
    </dt>
    <dd><%= book.summary%></dd>
    <%}%>
  </dl>
  <%}else{%>
  <p>Do you really want to delete this Author?</p>
  <% } %>
  <form method="post">
    <input type="hidden" name="authorid" value="<%=author._id%>" />
    <button>Delete</button>
  </form>
</main>
